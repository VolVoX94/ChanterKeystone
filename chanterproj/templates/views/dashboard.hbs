<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<title>Material Design Bootstrap</title>
	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>


<div class="container">
	<form action="/dashboardUser" method = "post" class="form-horizontal">
		<div class="col-lg-10 col-lg-offset-1">
			<h1>My User:</h1>
		</div>
		<input type="hidden" class="form-control" name="id" value="{{user._id}}">

		<div class="form-group">
			<label class="control-label col-sm-2" for="email">Firstname:</label>
			<div class="col-sm-10">
				<input required type="text" value="{{user.name.first}}" class="form-control" name="firstname" placeholder="Enter firstname">
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2" for="email">Lastname:</label>
			<div class="col-sm-10">
				<input required type="text" name="lastname" value="{{user.name.last}}" class="form-control" placeholder="Enter lastname">
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2" for="email">Email:</label>
			<div class="col-sm-10">
				<input required type="email" name="email" value="{{user.email}}" class="form-control" placeholder="Enter email">
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2" for="email">Password:</label>
			<div class="col-sm-10">
				<input required type="password" name="password" id="password" value="" class="form-control" placeholder="Enter new password" onkeyup='check();'>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2" for="email">Confirm password:</label>
			<div class="col-sm-10">
				<input required type="password" id="confirm_password" value="" class="form-control" placeholder="Confirm new password" onkeyup='check();'>
			</div>
		</div>

		<div class="col-lg-10 col-lg-offset-2">
			<span id='message'></span>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label><input name="subscriber" type="checkbox" {{#if user.isSubscriber}}
								  checked
					{{/if}}>Subscribe to Newsletters</label>
				</div>
			</div>
		</div>

		<input type="hidden" name="admin" value="{{user.isAdmin}}">

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button id="submit" type="submit" value="submit" class="btn btn-default">Submit</button>
			</div>
		</div>
	</form>
	
	
	
	
	
	{{#if choirs}}
			{{#each choirs}}
				<div class="">
					<form action="/dashboardChoir" method = "post">
						<h1>Your choir: {{name}}</h1>
						<input type="hidden" name="id" value="{{_id}}">
						<br>
						Name:<br>
						<input type="text" name="name" value="{{name}}">
						<br>
						PLZ:<br>
						<input type="text" name="plz" value="{{plz}}">
						<br>
						Place:<br>
						<input type="number" name="place" value="{{place}}">
						<br>
						Director firstname:<br>
						<input type="text" name="directorFirstname" value="{{directorFirstname}}">
						<br>
						Director lastname:<br>
						<input type="text" name="directorLastname" value="{{directorLastname}}">
						<br>
						Cashier firstname:<br>
						<input type="text" name="cashierFirstname" value="{{cashierFirstname}}">
						<br>
						Cashier lastname:<br>
						<input type="text" name="cashierLastname" value="{{cashierLastname}}">
						<br>
						Secretary firstname:<br>
						<input type="text" name="secretaryFirstname" value="{{secretaryFirstname}}">
						<br>
						Secretary lastname:<br>
						<input type="text" name="secretaryLastname" value="{{secretaryLastname}}">
						<br>
						Founding year:<br>
						<input type="number" name="foundingYear" value="{{foundingYear}}">
						<br>
						Homepage:<br>
						<input type="text" name="homepage" value="{{homepage}}">
						<br>
						Last updated:<br>
						<input type="text" name="lastUpdate" value="{{lastUpdate}}">
						<br> <br>
						<input type="submit" value="Submit">
					</form>
				</div>
			{{/each}}
		

	{{else}}
		<!-- else -->
		<h3 class="text-muted">There are no choirs yet.</h3>
	{{/if}}
	
	{{#if user.isAdmin}}
		<h1>Statistics</h1>
		
		<div class="card m-5">
			<h3>Most visited pages</h3>
			<canvas id="myChart" style="max-width: 1200px"></canvas>
			
			<h3>Send newsletters</h3>
			<canvas id="myChart" style="max-width: 1200px"></canvas>
		</div>

		<!-- SCRIPTS -->
		<!-- JQuery -->
		<script type="text/javascript" src="diagramm/js/jquery-3.3.1.min.js"></script>
		<!-- Bootstrap tooltips -->
		<script type="text/javascript" src="diagramm/js/popper.min.js"></script>
		<!-- Bootstrap core JavaScript -->
		<script type="text/javascript" src="diagramm/js/bootstrap.min.js"></script>
		<!-- MDB core JavaScript -->
		<script type="text/javascript" src="diagramm/js/mdb.min.js"></script>

		<script>
			var ctx = document.getElementById("myChart").getContext('2d');
			var myChart = new Chart(ctx, {
				type: 'bar',
				data: {
					labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
					datasets: [{
						label: '# of Votes',
						data: [12, 19, 3, 5, 2, 3],
						backgroundColor: [
							'rgba(255, 99, 132, 0.2)',
							'rgba(54, 162, 235, 0.2)',
							'rgba(255, 206, 86, 0.2)',
							'rgba(75, 192, 192, 0.2)',
							'rgba(153, 102, 255, 0.2)',
							'rgba(255, 159, 64, 0.2)'
						],
						borderColor: [
							'rgba(255,99,132,1)',
							'rgba(54, 162, 235, 1)',
							'rgba(255, 206, 86, 1)',
							'rgba(75, 192, 192, 1)',
							'rgba(153, 102, 255, 1)',
							'rgba(255, 159, 64, 1)'
						],
						borderWidth: 1
					}]
				},
				options: {
					scales: {
						yAxes: [{
							ticks: {
								beginAtZero:true
							}
						}]
					}
				}
			});

			var check = function() {
				if (document.getElementById('password').value == document.getElementById('confirm_password').value) {
					document.getElementById('message').style.color = 'green';
					document.getElementById('message').innerHTML = 'matching';
					document.getElementById('submit').disabled = false;
				} else {
					document.getElementById('message').style.color = 'red';
					document.getElementById('message').innerHTML = 'not matching';
					document.getElementById('submit').disabled = true;
				}
			}
		</script>

	{{/if}}
</div>
