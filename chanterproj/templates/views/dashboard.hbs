			function loadDiagramm(dataset){
				var myChart = new Chart(ctx, {
					type: 'bar',
					data: {
						labels: ["Index", "Gallery", "Events", "Contact", "Blog", "Choir", "Dashboard", "Sent tickets", "sent newsletters"],
