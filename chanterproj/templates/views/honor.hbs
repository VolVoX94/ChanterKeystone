<div class="container">
	{{#if honor}}
		{{#each honor}}
			{{#if ../isGerman}}
				<h2>Mitglieder</h2>
			{{else}}
				<h2>Membres</h2>
			{{/if}}
			{{#each members}}
				<button type="button" class="btn bg-transparent" data-toggle="modal" data-target="#d{{@index}}">
					<p>
						{{name.first}}
						{{name.last}}
						{{#if comiteRole}}
							({{comiteRole}})
						{{/if}}
					</p>
				</button>
				<div class="modal fade" id="d{{@index}}" tabindex="-1" role="dialog" aria-labelledby="Modal1" aria-hidden="true">
					<div class="modal-dialog modal-dialog-centered modal-lg">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">
									{{name.first}}
									{{name.last}}
									{{#if comiteRole}}
										({{comiteRole}})
									{{/if}}
								</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								{{#if image}}
									<img src="{{cloudinaryUrl image	 height='400'}}">
								{{/if}}
								{{#if ../../isGerman}}
									<h4>Kontakt</h4>
								{{else}}
									<h4>Contact</h4>
								{{/if}}
								<div class="row">
									{{#if email}}
										<div class="col-lg-3">
											<p><strong>
												Email:
											</strong>{{email}}</p>
										</div>
									{{/if}}
									{{#if address}}
										<div class="col-lg-3">
											<p><strong>
												{{#if ../../isGerman}}
													Adresse:
												{{else}}
													Adresse:
												{{/if}}
											</strong>
											<p>{{address}}</p>
											<p>{{plz}}</p>
											<p>{{place}}</p>
										</div>
									{{/if}}
									{{#if businessPhone}}
										<div class="col-lg-3">
											{{#if ../../isGerman}}
												<strong>Telefon geschäftlich:</strong>
											{{else}}
												<strong>Téléphone commercialement:</strong>
											{{/if}} <p>

											{{businessPhone}}</p>
										</div>
									{{/if}}
									{{#if privatePhone}}
										<div class="col-lg-3">
											{{#if ../../isGerman}}
												<strong>Telefon privat:</strong>
											{{else}}
												<strong>Téléphone privé:</strong>
											{{/if}} <p>
											{{privatePhone}}</p>
										</div>
									{{/if}}
									{{#if fax}}
										<div class="col-lg-3">
											<p><strong>
												{{#if ../../isGerman}}
													Faxgerät:
												{{else}}
													Fax:
												{{/if}}
											</strong>{{fax}}</p>
										</div>
									{{/if}}
								</div>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		{{/each}}
	{{/if}}
</div>
