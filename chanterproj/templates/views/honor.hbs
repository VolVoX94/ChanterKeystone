<div class="container">
	{{#if honor}}
		{{#each honor}}
			{{#if ../isGerman}}
				<h2>Mitglieder</h2>
			{{else}}
				<h2>Membres</h2>
			{{/if}}
			{{#each members}}
				<button type="button" class="btn bg-transparent" data-toggle="modal" data-target="#d{{@index}}">
					<p>{{name.first}} {{name.last}} ({{comiteRole}})</p>
				</button>
				<div class="modal fade" id="d{{@index}}" tabindex="-1" role="dialog" aria-labelledby="Modal1" aria-hidden="true">
					<div class="modal-dialog modal-dialog-centered modal-lg">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">{{name.first}} {{name.last}} ({{comiteRole}}</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								{{#if image}}
									<img src="{{cloudinaryUrl image	 height='400'}}">
								{{/if}}
								{{#if ../../isGerman}}
									<h4>Kontact</h4>
								{{else}}
									<h4>Contact</h4>
								{{/if}}
								<div class="row">
									<div class="col-lg-3">
										<p><strong>
											Email:
										</strong>{{email}}</p>
									</div>
									<div class="col-lg-3">
										<p><strong>
											{{#if ../../isGerman}}
												Position:
											{{else}}
												Place:
											{{/if}}
										</strong>{{place}}</p>
									</div>
									<div class="col-lg-3">
										{{#if ../../isGerman}}
											<strong>Telefon:</strong>
										{{else}}
											<strong>Téléphone:</strong>
										{{/if}} <p>

										{{businessPhone}}</p>
									</div>
									<div class="col-lg-3">
										<p><strong>
											{{#if ../../isGerman}}
												Faxgerät:
											{{else}}
												Fax:
											{{/if}}
										</strong>{{fax}}</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		{{/each}}
	{{/if}}
</div>
