<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/blog">
					&larr; 
					{{#if isGerman}}
						zur√ºck zu den Kleinanzeigen
					{{else}}
							retour aux petites annonces
					{{/if}}
					
				</a>
				</p>
				<hr>
				<header>
					<h1>{{data.post.title}}</h1>
					<h5>
						{{{categoryList data.post.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{#if data.post.image}}
						<img src="{{{cloudinaryUrl data.post.image width=570 height=270 crop='fit' }}}"
							 class="img-responsive">{{/if}}
					{{#if isGerman}}
						{{{data.post.contentGerman.brief}}}
						{{{data.post.contentGerman.extended}}}
						{{else}}
						{{{data.post.contentFrench.brief}}}
						{{{data.post.contentFrench.extended}}}
					{{/if}}
					
				</div>
			</article>
		</div>
	</div>
</div>
