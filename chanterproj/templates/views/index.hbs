<div id="myCarousel" class="carousel slide mt-0" data-ride="carousel">
	<!-- Carousel indicators -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>
	<!-- Wrapper for carousel items -->
	<div class="carousel-inner">
		<div class="item active">
			<img src="/images/ThreeCrop.jpg" alt="First Slide">
		</div>
		<div class="item">
			<img src="/images/OneCrop.jpg" alt="Second Slide">
		</div>
		<div class="item">
			<img src="/images/TwoCrop.jpg" alt="Third Slide">
		</div>
	</div>
	<!-- Carousel controls -->
	<a class="carousel-control left" href="#myCarousel" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</a>
	<a class="carousel-control right" href="#myCarousel" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</a>
</div>

<div class="container">
	{{#if headerposts}}
		{{#each headerposts}}
			<h2>News</h2>
			{{#each posts}}
				<button type="button" class="btn bg-transparent" data-toggle="modal" data-target="#d{{@index}}">
					<p></p>
				</button>
			
			
				<div class="modal fade" id="d{{@index}}" tabindex="-1" role="dialog" aria-labelledby="Modal1" aria-hidden="true">
					<div class="modal-dialog modal-dialog-centered modal-lg">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalLabel">{{name.first}} {{name.last}} ({{comiteRole}}</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								{{#if image}}
									<img src="{{cloudinaryUrl image	 height='400'}}">
								{{/if}}
								<h4>Contact</h4>
								<div class="row">
									<div class="col-lg-3">
										<p><strong>Email: </strong>{{email}}</p>
									</div>
									<div class="col-lg-3">
										<p><strong>Place: </strong>{{place}}</p>
									</div>
									<div class="col-lg-3">
										<p><strong>Phone: </strong>{{businessPhone}}</p>
									</div>
									<div class="col-lg-3">
										<p><strong>Fax: </strong>{{fax}}</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		{{/each}}
	{{/if}}
</div>


