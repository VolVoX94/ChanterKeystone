<div id="myCarousel" class="carousel slide mt-0" data-ride="carousel">
	<!-- Carousel indicators -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>
	<!-- Wrapper for carousel items -->
	<div class="carousel-inner">
		<div class="item active">
			<img src="/images/ThreeCrop.jpg" alt="First Slide">
		</div>
		<div class="item">
			<img src="/images/OneCrop.jpg" alt="Second Slide">
		</div>
		<div class="item">
			<img src="/images/TwoCrop.jpg" alt="Third Slide">
		</div>
	</div>
	<!-- Carousel controls -->
	<a class="carousel-control left" href="#myCarousel" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</a>
	<a class="carousel-control right" href="#myCarousel" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</a>
</div>

<div class="container">
	{{#if headerposts}}
		{{#each headerposts}}
			<h2>News</h2>

			<div class="row">
				{{#each posts}}
					<div class="col-lg-6">
						<div class="panel panel-default">
							{{#if ../../isGerman}}
								<div class="panel-heading">{{labelGerman}}</div>
							{{else}}
								<div class="panel-heading">{{labelFrench}}</div>
							{{/if}}
							
							<div class="panel-body">

								{{#if ../../isGerman}}
									<h4>{{{contentGerman.brief}}}</h4>
								{{else}}
									<h4>{{{contentFrench.brief}}}</h4>
								{{/if}}

								{{#if image}}
									<img src="{{cloudinaryUrl image}}" width="100%">
								{{/if}}

								<p><i>by {{author.name.first}} {{author.name.last}}</i></p>

								<button type="button" class="btn bg-transparent" data-toggle="modal"
										data-target="#d{{@index}}">
									See more...
								</button>
							</div>
						</div>
					</div>


					<div class="modal fade" id="d{{@index}}" tabindex="-1" role="dialog" aria-labelledby="Modal1"
						 aria-hidden="true">
						<div class="modal-dialog modal-dialog-centered modal-lg">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLabel">{{title}}</h5>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
								</div>
								<div class="modal-body">

									{{#if ../../isGerman}}
										<h4>{{{contentGerman.brief}}}</h4>
									{{else}}
										<h4>{{{contentFrench.brief}}}</h4>
									{{/if}}

									{{#if image}}
										<img src="{{cloudinaryUrl image    }}" width="100%">
									{{/if}}

									{{#if ../../isGerman}}
										<p>{{{contentGerman.extended}}}</p>
									{{else}}
										<p>{{{contentFrench.extended}}}</p>
									{{/if}}

									<p><i>by {{author.name.first}} {{author.name.last}}</i></p>
								</div>
							</div>
						</div>
					</div>
				{{/each}}
			</div>
		{{/each}}
	{{/if}}
</div>


